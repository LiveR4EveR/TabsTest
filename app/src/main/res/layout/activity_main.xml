<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/OffWhite">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/shoppingbag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:id="@+id/img"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_below="@id/img"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="22sp"
        android:id="@+id/userTxt"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/userTxt"
        android:background="@drawable/edit_box"
        android:id="@+id/userEditTxt"
        android:paddingLeft="5pt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@id/userEditTxt"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textSize="22sp"
        android:id="@+id/passTxt"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/passTxt"
        android:background="@drawable/edit_box"
        android:id="@+id/passEditTxt"
        android:inputType="textPassword"
        android:paddingLeft="5pt"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:layout_below="@id/passEditTxt"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:buttonTint="@color/SkiBlue"
        android:id="@+id/rememberChbox"
        android:checked="false"/>
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rememberChbox"
        android:layout_marginTop="35dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:text="Login"
        android:textColor="@color/White"
        android:backgroundTint="@color/colorPrimaryDark"
        android:id="@+id/loginBtn"/>


</RelativeLayout>